<div class="col-md-8 col-md-offset-2">
	<div class="form-content">

    <%= form_for @child do |f| %>

      <p><%= f.label :first_name %> <%=f.text_field :first_name %></p>
      <p><%= f.label :last_name %> <%=f.text_field :last_name %></p>
      <p><%= f.label :birthdate %> <%= f.date_select :birthdate, { :start_year => Time.now.year - 5, :end_year => Time.now.year}%>
      <p><%= f.label "parent's email" %> <%=f.text_field :email %></p>

      <%= f.submit %>

    <% end %>

  </div>
</div>
