<h3 class="text-center"><%=@child.name%>'s Profile Page</h3><hr>


  	<p>Birthdate: <%= format_date(@child.birthdate) %></p>
  	<p>Parents Email:
			<% if @child.user %>
				<span> <%= @child.user.email %></span>
			<% else %>
				<span> no parent account linked to this child </span>
			<% end %>
		</p>
		<p>Secondary email:
			<% if !@child.secondary_email.empty? %>
				<%= @child.secondary_email %>
			<% else %>
				<span> none </span>
			<% end %>
		</p>
  	<p>Average nap duration: <% if @child.nap_average %> <%= @child.nap_average.round(2) %> hours </p> <% else %> no naps recorded </p> <% end %>
  	<p>Observed Performing Acts of Kindness: <%=@child.kind_acts.count %> times</p>
  	<p>Observed Receiving Acts of Kindness: <%=@child.gifts.count %> times</p>

		<% if policy(@child).update? %>
  		<%= link_to "edit profile", edit_child_path(@child) %> |
		<% end %>
		<% if policy(@child).destroy? %>
  		<%= link_to "delete profile", child_path(@child), method: :delete, data: { confirm: "Are you sure?"} %></br>
		<% else %>
			</br>
		<% end %>

  	<h4 class="top_banner">Daily Reports</h4>

  	<% if @child.daily_reports.empty? %>
    	<p> There are none yet </p>
  	<% else %>
			<ul>

							<%= render @child.daily_reports %>

						</ul>
  	<% end %>


		<% if policy(DailyReport).create? %>
			<%= link_to "Create a new report", new_child_daily_report_path(@child) %> |
			<% end %>
		<%= link_to "Return to Roster", children_path %>
