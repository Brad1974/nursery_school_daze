<div class='nested-fields'>
  <div class="field">
    <%= f.label "Describe Act:" %></br>
    <%= f.text_area :act, class: 'form-control' %></br>
    <%= f.hidden_field :giver_id, value: @daily_report.child_id %>
    <%= f.label "Who was the recipient of the kind act?" %>
    <%= f.collection_select :recipient_id, Child.all.reject{|c| c == @child}, :id, :name, include_blank: 'Choose a child', class: 'form-control' %>
  </div>
  <%= link_to_remove_association "remove kind_act", f %>
</div>
