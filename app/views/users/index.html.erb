<h3 class="text-center">Administrative Control Panel</h3>

<% if @users.length > 1 %>
  <div class="well">
    <h4 class="text-center">Edit Account Access Privileges </h4>
    <table class="table table-hover">
      <tbody>
        <% @users.all.reject{|u| u == current_user}.each do |user| %>
          <tr>
            <%= render user %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<br>

<div class="well">
  <h4 class="text-center">Register New User</h4>
  <%= render 'form', { user: @user, children: @children}%>
</div>
